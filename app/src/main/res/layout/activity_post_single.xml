<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.user.register_majed.PostSingleActivity">

    <Button
        android:text="Remove Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SingleRemoveBtn"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:layout_weight="0.24"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06">

            <ImageView
                android:id="@+id/thisuserimage"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:id="@+id/firstNameLastName"
                android:layout_weight="0.54"
                android:paddingRight="15dp"
                android:paddingTop="23dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="178dp"
            app:srcCompat="@mipmap/add_btn"
            android:id="@+id/singleBlogImage"
            android:layout_weight="0.06"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/singleBlogTitle"
            android:layout_weight="0.04"
            android:padding="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_local_phone_black_18dp"
                android:id="@+id/imageView10"
                android:layout_weight="1" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/post_phone"
                android:layout_weight="0.03"
                android:layout_width="75dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@mipmap/ic_location_on_black_18dp"
                android:id="@+id/imageView6"
                android:layout_weight="1" />

            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:id="@+id/post_location"
                android:layout_marginLeft="5dp" />

            <TextView
                android:text="Price:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:layout_weight="0.24"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp" />

            <TextView
                android:text="$250"
                android:layout_height="wrap_content"
                android:id="@+id/post_price"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:padding="10dp">

            <Button
                android:id="@+id/send_message"
                android:background="@mipmap/ic_message_black_24dp"
                android:layout_width="41dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Send Message"
                android:id="@+id/textView8"
                android:layout_weight="2.96"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp" />

        </LinearLayout>

        <TextView
            android:text="TextView"
            android:textStyle="normal"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleBlogDesc"
            android:padding="10dp" />

    </LinearLayout>

</RelativeLayout>
