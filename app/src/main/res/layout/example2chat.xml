<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="Majed Chamseddine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:id="@+id/chatconversation"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_weight="0.06" />

        <TextView
            android:text="     Hello Majed!"
            android:layout_width="143dp"
            android:layout_height="27dp"
            android:background="@drawable/chat"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="Hey Wassim!"
            android:background="@drawable/chat2"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:id="@+id/textView22"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="37dp"
            android:background="@drawable/chat"
            android:id="@+id/textView23"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="Is your price negotiable?"
            android:layout_weight="0.03" />

        <TextView
            android:text="Yes, I can give it for $250"
            android:background="@drawable/chat2"
            android:layout_width="248dp"
            android:layout_height="46dp"
            android:id="@+id/textView27"
            android:textAlignment="textStart"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="37dp"
            android:background="@drawable/chat"
            android:id="@+id/textView28"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="Ok, let's meet up!" />

        <EditText
            android:layout_width="293dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Enter Text here...."
            android:background="@drawable/input_outline"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.07"
            android:paddingLeft="10dp"
            android:textColor="@color/gray" />

        <Button
            android:text="Send"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/button6"
            android:background="@color/colorPrimary"
            android:layout_weight="0.00"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-41dp" />
    </LinearLayout>
</LinearLayout>