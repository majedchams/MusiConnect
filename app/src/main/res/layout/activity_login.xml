<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.user.register_majed.LoginActivity">

    <EditText

        android:imeOptions="actionDone"
        android:textColorHint="#8a989a"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:layout_weight="0.58"
        android:padding="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="341dp"
        android:layout_height="142dp"
        android:src="@drawable/ourlogo"
        android:id="@+id/imageView2"
        android:layout_weight="2.45"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:orientation="vertical"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">


        <EditText
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColorHint="#8a989a"

            android:hint="Password"
            android:id="@+id/editTextPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp" />


        <Button
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_settings"
            android:id="@+id/buttonSignin"
            android:text="Login"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="center"
            android:text="No account yet? Sign up here"
            android:id="@+id/textViewSignup"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>


</RelativeLayout>


